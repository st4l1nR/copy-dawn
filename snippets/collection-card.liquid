<a class="flex flex-col h-full group" href="{{ collection.url }}">
    {% if collection.image != blank %}
        {{ collection.image | image_url: width:1600 | image_tag: class:"w-full flex-1 object-cover" }}
    {% else %}
        {% if collection.products[0].featured_image != blank %}
            {{ collection.products[0].featured_image | image_url: width:1600 | image_tag: class:"w-full flex-1 object-cover" }}
        {% else %}
            {{ 'image' | placeholder_svg_tag }}
        {% endif %}

    {% endif %}

    <div class="flex mt-5 space-x-2">
        <span>{{ collection.title }}</span>
        <img class="transition-all transform group-hover:translate-x-2" src="{{ 'arrow right.svg' | asset_url }}" alt="">
    </div>
</a>