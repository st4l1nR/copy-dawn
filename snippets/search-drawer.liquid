<div @toggle-search.window="open = !open" class="fixed inset-0 z-50 bg-black bg-opacity-70" x-data="{open:false}" x-show="open">
    <div @click.away="open = false" class="flex items-center w-full h-24 px-5 bg-white " x-show="open" x-transition:enter-end="opacity-100 translate-y-100" x-transition:enter-start="opacity-0 -translate-y-full" x-transition:enter="transition ease-out duration-300" x-transition:leave-end="opacity-0 -translate-y-full" x-transition:leave-start="opacity-100 -translate-y-100" x-transition:leave="transition ease-in duration-300">
        <div class="flex items-center w-full h-12 max-w-xl mx-auto space-x-5">
            {% render 'search-form' %}
            <img class="w-5 h-5 transition cursor-pointer" src="{{ 'close.svg' | asset_url }}" alt="" @click="$dispatch('toggle-search')">
        </div>
    </div>
    
</div>
