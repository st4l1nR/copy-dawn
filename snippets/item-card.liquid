<div class="relative flex pt-10 pr-5 space-x-5" href="{{ item.url }}">
    <button @click="updateCartItem('{{ item.id }}', 0)" class="absolute right-0 top-2" type="button">
        <img class="w-3 h-3 " src="{{ 'close.svg' | asset_url }}"/>
    </button>
    <a href="{{ item.url }}">
        {% if item.image != blank %}
            {{ item.image | image_url: height:"200px" | image_tag: class:" object-cover basis-1/4" }}
        {% else %}
            {{ 'image' | placeholder_svg_tag }}
        {% endif %}
    </a>

    <div class="flex flex-col justify-between basis-3/4">
        <div class="flex flex-col space-y-3">
            <a class="text-sm font-bold hover:underline" href="{{ item.url }}">{{ item.title }}</a>
            <span class="text-xs">{{ item.grams | weight_with_unit }}</span>
        </div>
        <div class="flex items-center justify-between">
            <span class="text-xs">Quantity:
                {{ item.quantity }}</span>
            <span class="text-sm font-bold">{{ item.original_price | money_with_currency }}</span>
        </div>
    </div>
</div>