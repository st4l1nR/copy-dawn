{% form 'create_customer' %}

    <div class="flex flex-col max-w-md px-5 mx-auto space-y-10">
        <span class="text-4xl text-center">Create account</span>
        {% if form.errors %}
            {% render 'form-errors', form:form %}
        {% endif %}
        <div class="flex flex-col items-center space-y-3">
            <input class="w-full" name="customer[first_name]" {% if form.first_name %} value="{{ form.first_name }}" {% endif %} placeholder="First name" type="text" required>
            <input class="w-full" name="customer[last_name]" {% if form.last_name %} value="{{ form.last_name }}" {% endif %} placeholder="Last name" required="true" type="text">
            <div class="w-full">
                <input class="w-full" id="RegisterForm-email" name="customer[email]" {% if form.email %} value="{{ form.email }}" {% endif %} placeholder="Email" required="true" type="email">
                {% if form.errors contains 'email' %}
                    <span class="mt-5 text-sm text-red-500">{{ form.errors.messages['email'] }}</span>
                {% endif %}
            </div>
            <div class="w-full">
                <input class="w-full" id="RegsiterForm-password" name="customer[password]" {% if form.password %} value="{{ form.password }}" {% endif %} placeholder="Password" required="true" type="password">
                {% if form.errors contains 'password' %}
                    <span class="mt-5 text-sm text-red-500">{{ form.errors.translated_fields[field] | capitalize }}
                        {{ form.errors.messages[field] }}</span>
                {% endif %}
            </div>

        </div>
        <button class="w-32 h-12 mx-auto btn-primary">Create</button>
    </div>
{% endform %}