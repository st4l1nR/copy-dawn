{% if cart.items[0] %}
    {% form 'cart', cart %}
        <div class="flex flex-col items-center px-5 mx-auto mt-20 space-y-4 md:items-end max-w-7xl">
            <div class="flex items-center space-x-5">
                <span>Subtotal</span>
                <span class="text-lg font-light">{{ cart.original_total_price | money_with_currency }}</span>
            </div>
            <span class="text-sm font-light">Taxes and shipping calculated at checkout</span>
            <button class="w-full h-12 max-w-xs btn-primary" name="checkout">Checkout</button>
        </div>
    {% endform %}
{% endif %}

{% schema %}
{
    "name":"Subtotal"

}
{% endschema %}