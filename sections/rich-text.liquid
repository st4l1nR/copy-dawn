<div class="flex flex-col items-center px-5 mx-auto mt-10 space-y-5 text-center max-7xl">
    {% for block in section.blocks %}
        {% case block.type %}
            {% when 'header' %}
                <span class="text-2xl">{{ block.settings.text }}</span>
            {% when 'text' %}
                <span class="font-light">{{ block.settings.text }}</span>
            {% when 'button' %}
                <a class="min-w-[160px] h-12 {{ block.settings.style }}" href="{{ block.settings.link }}">{{ block.settings.text }}</a>
        {% endcase %}
    {% endfor %}
</div>


{% schema %}

{
    "name": "Rich text",
    "blocks": [
        {
            "name": "Header",
            "type": "header",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "Header"
                }
            ]
        }, {
            "name": "Text",
            "type": "text",
            "settings": [
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text",
                    "default": "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nobis, corporis."
                }
            ]
        }, {
            "name": "Button",
            "type": "button",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "default": "Button"
                }, {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }, {
                    "type": "select",
                    "id": "style",
                    "label": "Style",
                    "options": [
                        {
                            "value": "btn-primary",
                            "label": "primary"
                        }, {
                            "value": "btn-secondary",
                            "label": "secondary"
                        }, {
                            "value": "btn-primary-outlined",
                            "label": "primary outlined"
                        }, {
                            "value": "btn-secondary-outlined",
                            "label": "seconadry outlined"
                        }
                    ],
                    "default": "btn-primary"
                }
            ]
        }
    ],
    "max_blocks":3
}

{% endschema %}