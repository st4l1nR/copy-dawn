{% for block in section.blocks %}
    <a :style="{backgroundColor:'{{ block.settings.background_color }}', color:'{{ block.settings.text_color }}'}" class="flex items-center justify-center w-full text-sm h-9 " {% if block.settings.link != blank %} href="{{ section.settings.link }}" {% endif %}>
        {{ block.settings.text }}
    </a>
{% endfor %}

{% schema %}

{
    "name": "Announcement bar",
    "blocks": [
        {
            "name": "Announcement",
            "type": "announcement",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text",
                    "placeholder": "Text",
                    "default": "Welcome to our store"
                }, {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }, {
                    "type": "color",
                    "id": "background_color",
                    "label": "Background color",
                    "default": "#000000"
                }, {
                    "type": "color",
                    "id": "text_color",
                    "label": "Text color",
                    "default": "#FFFFFF"
                }
            ]
        }
    ]
}

{% endschema %}